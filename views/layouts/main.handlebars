  <body>
    {{{ body }}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/theaterjs/latest/theater.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.3.5.js"></script>
    <script>
      // TheaterJS typing effect behavior by Gabin Aureche
      // Source: https://github.com/Zhouzi/TheaterJS
      // Instantiation
      var theater = new TheaterJS();
      // Describe actors
      theater
        .describe("Tagline", .8, "#tagline")
      // Write the scenario
      theater
        .write("Tagline:The World's Largest Education Hackathon", 1000);
      // Listen to theater's events
      theater
        .on("say:start, erase:start", function () {
          // add blinking caret
        })
        .on("say:end, erase:end", function () {
          // remove blinking caret
        })
        .on("*", function () {
          // do something
        });

      // Smooth scrolling plugin by Chris Coiyer
      // Source: http://css-tricks.com/snippets/jquery/smooth-scrolling/
      $(document).on('click', 'a[href*=#]:not([href=#])', function() {
        if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
          var target = $(this.hash);
          target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
          if (target.length) {
            $('html,body').animate({
              scrollTop: target.offset().top
            }, 1000);
            window.location.hash = target.selector;
            return false;
          }
        }
      });
    </script>
    <script src="js/bundle.js"></script>
  </body>
